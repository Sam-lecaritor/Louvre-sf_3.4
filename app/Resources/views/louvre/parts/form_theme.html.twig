{% block collection_widget %}
    {% spaceless %}

  
        {% if prototype is defined %}
            {% set attr = attr|merge({'data-prototype': form_widget(prototype)}) %}
            {% set attr = attr|merge({'data-prototype-name': prototype.vars.name}) %}
        {% endif %}
        {% set attr = attr|merge({'data-allow-add': allow_add ? 1 : 0}) %}
        {% set attr = attr|merge({'data-allow-remove': allow_delete ? 1 : 0 }) %}
        {% set attr = attr|merge({'data-name-prefix': full_name}) %}

        <fieldset class="well">
            {# <label>{{ form_label(form) }}</label> #}

            {{ form_errors(form) }}
        </a>
        {# Don't forget to add the collection attributes in your markup #}
        <table {{ block('widget_attributes') }}>
            <thead>
                <th>Date de naissance</th>
                <th>Nom,Prenom</th>
                <th>Pays</th>
                <th>Options</th>
                <th>supprimer</th>
            </thead>
            <tbody>

                {#
                 # we can't form_widget(form) as it would render parent markup for a collection, so
                 # we iterate manually on children
                 #}
                {% for item in form %}
                    {{ form_widget(item) }}
                {% endfor %}

            </tbody>
        </table>
    </fieldset>

{% endspaceless %}
{% endblock %}

{% block louvrebundle_billet_widget %}

<tr {{ block('widget_attributes') }}>
    <td>{{ form_widget(form.dateNaissance) }}</td>
    <td>{{ form_widget(form.nom) }}{{ form_widget(form.prenom) }}</td>
    <td>{{ form_widget(form.pays) }}</td>
    <td>{{ form_widget(form.demiJournee) }}
        {{ form_widget(form.tarif) }}</td>
    <td class="text-center">
        <a href="#" class="collection-remove btn btn-default btnTickets" title="Delete element">
            <i class="fa fa-minus-square" style="font-size:20px;color:white"></i>
        </a>
        <a href="#" class="collection-add btn btn-default btnTickets" title="Add element">
            <i class="fa fa-plus-square" style="font-size:20px;color:white"></i>
        </a>

        <a href="#" class="collection-duplicate btn btn-default hidden" title="Duplicate element">
            <span class="glyphicon glyphicon-th-large"></span></a>
    </td>
</tr>

{{ form_rest(form) }}
{% endblock %}

